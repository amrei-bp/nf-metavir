manifest {
  mainScript = 'main.nf'
}

// default parameters
params {
    cpus = "2"
    memory = "16g"
    help = false
    profile = false

    // Inputs
    illumina = './illumina'

    // Optional input
    host_ref = ''

    // Databases
    k2nt_db = ''
    k2prot_db = ''
    krak1_nt_db = ''

    // Options
    skip_host_map = false
    skip_diamond4pavian = false
    diamond4megan = false
    krona_chart = false

    // Output
    output = './results'
}

profiles {
    //executer
    // planetsmasher profile
    planet {
        includeConfig 'conf/planet.config'
        params.krak1_nt_db = "/export/databases/kraken/current/nt"
    }

    uppmax {
        process.executor = 'slurm'
    }

    local {
        process.executor = 'local'
    }
}
